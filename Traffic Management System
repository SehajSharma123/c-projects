#include <iostream>
#include <unistd.h>
using namespace std;

void signalCycle() {
    while(true) {
        cout << "\033[1;31m [RED] Stop! \033[0m" << endl;
        sleep(5);
        cout << "\033[1;33m [YELLOW] Get Ready! \033[0m" << endl;
        sleep(2);
        cout << "\033[1;32m [GREEN] Go! \033[0m" << endl;
        sleep(5);
        system("clear");
    }
}

int main() {
    cout << "Starting Traffic System Simulation...\n";
    signalCycle();
    return 0;
}
