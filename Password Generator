#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

string generatePassword(int len) {
    string chars = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890!@#$%^&*";
    string password = "";
    for (int i = 0; i < len; i++) {
        password += chars[rand() % chars.length()];
    }
    return password;
}

int main() {
    srand(time(0));
    int length;
    cout << "Enter desired password length: "; cin >> length;
    cout << "Generated Password: " << generatePassword(length) << endl;
    return 0;
}
