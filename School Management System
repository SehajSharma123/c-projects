#include <iostream>
#include <string>
using namespace std;

class Person {
protected:
    string name;
public:
    void setName() { cout << "Enter Name: "; cin >> name; }
};

class Student : public Person {
    int grade;
public:
    void setGrade() { cout << "Enter Grade Level: "; cin >> grade; }
    void display() { cout << "Student: " << name << " | Grade: " << grade << endl; }
};

int main() {
    Student s;
    s.setName();
    s.setGrade();
    s.display();
    return 0;
}
